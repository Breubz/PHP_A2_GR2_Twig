{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - My Articles
{% endblock %}

{% block leftContent %}
    {% for article in articles %}
        {% if article.enabled == true %}
            <article>
                <header>
                    <h1>{{ article.title|upper }}</h1>
                </header>
                <p> {{ article.content }} </p>
                <footer>
                    <time datetime="{{ article.date|date('c') }}">{{ article.date|date('d-m-y') }}</time>
                </footer>
        {% endif %}
    {% endfor %}
{% endblock %}


{% block rightContent  %}
    <button class="btn-default btn-warning"> Clicky </button>
    <button class="btn-default btn-warning"> Clicky </button>
{% endblock %}
